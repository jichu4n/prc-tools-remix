INSTALL_HFILES = mathf.h

# INSTALL_FILES = libmf.a libmf.sa
INSTALL_FILES = libmf.a

all: $(INSTALL_FILES)

install: $(INSTALL_FILES) $(INSTALL_HFILES)
	$(INSTALL) -d $(exec_prefix)/$(target_alias)/lib
	for f in $(INSTALL_FILES); do \
	  $(INSTALL_DATA) $${f} $(exec_prefix)/$(target_alias)/lib; \
	done
	rm -f $(exec_prefix)/$(target_alias)/lib/libm.a
	(cd $(exec_prefix)/$(target_alias)/lib && $(LN_S) libmf.a libm.a)
	$(INSTALL) -d $(exec_prefix)/$(target_alias)/include
	for f in $(INSTALL_HFILES); do \
	  $(INSTALL_DATA) $(srcdir)/$${f} $(exec_prefix)/$(target_alias)/include; \
	done
	rm -f $(exec_prefix)/$(target_alias)/include/math.h
	(cd $(exec_prefix)/$(target_alias)/include && $(LN_S) mathf.h math.h)

