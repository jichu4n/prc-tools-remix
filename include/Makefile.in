srcdir = @srcdir@
VPATH = @srcdir@

prefix = @prefix@
datadir = @datadir@
headerdir = $(datadir)/prc-tools/include

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@

all: Pilot.fake PalmOS.fake

install: all
	$(INSTALL) -d $(headerdir)
	$(INSTALL_DATA) $(srcdir)/EntryPoints.h $(headerdir)/EntryPoints.h
	$(INSTALL_DATA) $(srcdir)/NewTypes.h $(headerdir)/NewTypes.h
	$(INSTALL_DATA) $(srcdir)/Standalone.h $(headerdir)/Standalone.h
	$(INSTALL_DATA) $(srcdir)/ctype.h $(headerdir)/ctype.h
	$(INSTALL_DATA) $(srcdir)/stdlib.h $(headerdir)/stdlib.h
	$(INSTALL_DATA) Pilot.fake $(headerdir)/Pilot.h
	$(INSTALL_DATA) PalmOS.fake $(headerdir)/PalmOS.h

.PHONY: all install clean


# We build these under false names; if they were here under their real names
# there'd be scope for confusion when building ../crt etc because those
# directories do their builds with a -I../include pointing to here.

Pilot.fake: missing-sdk.h
	sed -e 's/^<//' -e '/^>/d' $(srcdir)/missing-sdk.h > $@

PalmOS.fake: missing-sdk.h
	sed -e 's/^>//' -e '/^</d' $(srcdir)/missing-sdk.h > $@


clean:
	-rm -f *.fake
